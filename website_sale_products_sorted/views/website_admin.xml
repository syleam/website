        <!-- Add Main Menu for Admin Configuration -->
        <menuitem id="menu_website_admin_config"
            name="Admin Configuration"
            parent="website.menu_website_configuration"
            sequence="600"/>


        <!-- Admin Website - Products -->
        <record id="view_website_admin_products_form" model="ir.ui.view">
            <field name="name">website.admin.products.form</field>
            <field name="model">website.admin.products</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Products">
                    <sheet>
                        <div class="oe_title">
                            <h1>Website Admin Products</h1>
                        </div>
                            <div>
                                <label for="default_products_sorted_ok" />
                                <field name="default_products_sorted_ok" />
                            </div>
                            <div>
                                <label for="products_sorted_ok" />
                                <field name="products_sorted_ok" />
                            </div>
                        <notebook>
                            <page string="Default Products Sorted" attrs="{'invisible':[('default_products_sorted_ok','=',False)]}" name="default_products_sorted">
                                <div>
                                    Hello World !
                                </div>
                            </page>
                            <page string="Products Sorted" attrs="{'invisible':[('products_sorted_ok','=',False)]}" name="products_sorted">
                                <field name="field_product_line" nolabel="1">
                                    <tree string="Field Select Products Sorted Items" editable="bottom">
                                        <field name="sequence" string="Sequence" required="1" />
                                        <field name="field_product_id" string="Field Product" required="1" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_website_admin_products_view">
            <field name="name">Website Admin Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">website.admin.products</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_website_admin_products_view_form">
            <field name="act_window_id" ref="act_open_website_admin_products_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_website_admin_products_form"/>
        </record>

        <menuitem id="menu_website_admin_products"
            name="Admin Configuration"
            parent="website_sale_products_sorted.menu_website_admin_config"
            sequence="700"
            action="act_open_website_admin_products_view"/>
        <!-- End Admin Website - Products -->
    </data>
